<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@+id/next"
        motion:duration="5000"
        motion:autoTransition="animateToEnd"
        android:id="@+id/forward">
        <KeyFrameSet>
            <KeyPosition motion:motionTarget="@id/imageView2"
                motion:framePosition="75"
                motion:percentY="0"
                motion:percentX="0"
                motion:percentHeight="0"
                motion:percentWidth="0"
                motion:sizePercent="0"/>
            <KeyAttribute motion:motionTarget="@id/imageView2"
                motion:framePosition="75"
                android:rotationY="0"
                android:alpha="1"/>
            <KeyPosition motion:motionTarget="@id/imageView1"
                motion:framePosition="85"
                motion:percentY="0"
                motion:percentX="0"
                motion:percentHeight="0"
                motion:percentWidth="0"
                motion:sizePercent="0"/>
            <KeyAttribute motion:motionTarget="@id/imageView1"
                motion:framePosition="75"
                android:rotationY="-30"
                android:alpha="0.5"/>
            <KeyPosition motion:motionTarget="@id/imageView3"
                motion:framePosition="75"
                motion:percentY="0"
                motion:percentX="0"
                motion:percentHeight="0"
                motion:percentWidth="0"
                motion:sizePercent="0"/>
            <KeyAttribute motion:motionTarget="@id/imageView3"
                motion:framePosition="75"
                android:rotationY="30"
                android:alpha="0.5"/>

        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/previous"
        android:id="@+id/backward">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right" />

    </Transition>


    <ConstraintSet android:id="@+id/previous">
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="2:1"
            motion:layout_constraintBottom_toBottomOf="@id/imageView1"
            motion:layout_constraintTop_toTopOf="@id/imageView1"
            motion:layout_constraintStart_toEndOf="@id/guideline2"
            android:id="@+id/imageView2"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:alpha="0.5" />
        <Constraint
            android:id="@+id/imageView3"
            motion:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="2:1"
            motion:layout_constraintBottom_toBottomOf="@id/imageView1"
            motion:layout_constraintTop_toTopOf="@id/imageView1"
            android:layout_marginStart="4dp" />
        <Constraint
            android:id="@+id/imageView1"
            motion:layout_constraintEnd_toStartOf="@id/guideline2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="@id/guideline"
            motion:layout_constraintDimensionRatio="2:1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp" />
        <Constraint
            android:id="@+id/imageView0"
            motion:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="2:1"
            motion:layout_constraintBottom_toBottomOf="@id/imageView1"
            android:layout_marginEnd="4dp"
            motion:layout_constraintTop_toTopOf="@id/imageView1"
            android:alpha="0.5" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toStartOf="@id/guideline2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="@id/guideline"
            android:id="@+id/imageView2"
            motion:layout_constraintDimensionRatio="2:1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" />
        <Constraint
            android:id="@+id/imageView3"
            motion:layout_constraintStart_toEndOf="@id/guideline2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="2:1"
            motion:layout_constraintBottom_toBottomOf="@id/imageView2"
            android:layout_marginStart="4dp"
            motion:layout_constraintTop_toTopOf="@id/imageView2"
            android:alpha="0.5" />
        <Constraint
            android:id="@+id/imageView1"
            motion:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="2:1"
            motion:layout_constraintBottom_toBottomOf="@id/imageView2"
            android:layout_marginEnd="4dp"
            motion:layout_constraintTop_toTopOf="@id/imageView2"
            android:alpha="0.5" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/next">
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="2:1"
            motion:layout_constraintBottom_toBottomOf="@id/imageView3"
            motion:layout_constraintTop_toTopOf="@id/imageView3"
            android:id="@+id/imageView2"
            motion:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:alpha="0.5" />
        <Constraint
            android:id="@+id/imageView3"
            motion:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/guideline2"
            android:layout_marginEnd="4dp"
            motion:layout_constraintDimensionRatio="2:1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />
        <Constraint
            android:id="@+id/imageView4"
            motion:layout_constraintStart_toEndOf="@id/guideline2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="2:1"
            motion:layout_constraintBottom_toBottomOf="@id/imageView3"
            android:layout_marginStart="4dp"
            motion:layout_constraintTop_toTopOf="@id/imageView3"
            android:layout_marginLeft="4dp"
            android:alpha="0.5" />
    </ConstraintSet>

</MotionScene>